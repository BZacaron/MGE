@model MGE.ViewModels.Categorias.EditarViewModel
@{
    ViewData["Title"] = "Editar";
}

<div class="mb-2">
    <a class="btn btn-secondary" href="/Categorias">Voltar para a listagem</a>
</div>

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Editar Categoria <strong>#@Model.Id</strong></h2>
    </div>
    <div class="card-body">
        @if (@Model.FormMensagensErro != null)
        {
            <ul class="alert alert-danger">
                @foreach (var msgErro in @Model.FormMensagensErro)
                {
                    <li>@msgErro</li>
                }
            </ul>
        }

    <form action="/Categorias/Editar/@Model.Id" method="post">
        <div class="form-group">
            <label for="Descricao">Descricao: </label>
            <input id="Descricao" name="Descricao" class="form-control" type="text" value="@Model.Descricao" />
        </div>
        <div class="form-group">
            <label for="CategoriaPaiId">ID da Categoria Pai: </label>
            <input id="CategoriaPai" name="CategoriaPai" class="form-control" type="text" value="@Model.CategoriaPai" />
        </div>

        <div input="form-group">
            <input name="confirmar" class="btn btn-primary" type="submit" value="Salvar alterações" />
        </div>
    </form>
    </div>
</div>