@model MGE.ViewModels.Parametros.EditarViewModel
@{
    ViewData["Title"] = "Editar";
}

<div class="mb-2">
    <a class="btn btn-secondary" href="/Parametros">Voltar para a listagem</a>
</div>

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Editar Parâmetros <strong>#@Model.Id</strong></h2>
    </div>
    <div class="card-body">
        @if(@Model.FormMensagensErro != null)
            {
                <ul class="alert alert-danger">
                    @foreach(var msgErro in @Model.FormMensagensErro)
                {
                    <li>@msgErro</li>
                }
                </ul>
            }

    <form action="/Parametros/Editar/@Model.Id" method="post">
        <div class="form-group">
            <label for="ValorKwh">Valor do Kwh </label>
            <input id="ValorKwh" name="ValorKwh" class="form-control" type="text" value="@Model.ValorKwh" />
        </div>

        <div class="form-group">
            <label for="FaixaConsumoAlto">Faixa de consumo alto </label>
            <input id="FaixaConsumoAlto" name="FaixaConsumoAlto" class="form-control" type="text" value="@Model.FaixaConsumoAlto" />
        </div>

        <div class="form-group">
            <label for="FaixaConsumoMedio">Faixa de consumo médio </label>
            <input id="FaixaConsumoMedio" name="FaixaConsumoMedio" class="form-control" type="text" value="@Model.FaixaConsumoMedio" />
        </div>

        <div input="form-group">
            <input name="confirmar" class="btn btn-primary" type="submit" value="Confirmar" />
        </div>
    </form>
    </div>
</div>